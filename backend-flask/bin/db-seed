#! /usr/bin/bash   

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="run db-seed"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"


if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  URL=$PROD_CONNECTION_URL
else
  echo "Running in local mode"
  URL=$CONNECTION_URL
fi


seed_path="$(realpath .)/db/schema.sql"


psql $URL cruddur < $seed_path