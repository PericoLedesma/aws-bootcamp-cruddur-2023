#! /usr/bin/bash   
set -e # stop if it fails at any point

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="run db-setup"
printf "${CYAN}==== ${LABEL}${NO_COLOR}\n"\


bin_path="$(realpath .)/bin"


if [ "$1" = "prod" ]; then
    echo "Running in production mode"
    # We dont create database from here, we have to create a instance throught aws(other way)
    source "$bin_path/db/schema-load" "prod"
    source "$bin_path/db/seed" "prod"
    #source "$bin_path/db/update_cognito_user_id" 
    source "$bin_path/db/displaydata" "prod"
else
    echo "Running in local mode"
    source "$bin_path/db/drop"
    source "$bin_path/db/create"
    source "$bin_path/db/schema-load"
    source "$bin_path/db/seed"
    python $bin_path/db/update_cognito_user_id
    source "$bin_path/db/displaydata"
fi



